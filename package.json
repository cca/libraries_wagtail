{
  "name": "libraries-wagtail",
  "version": "1.0.0",
  "description": "CCA Libraries website in Wagtail CMS",
  "scripts": {
    "build": "gulp build",
    "css": "gulp css",
    "js": "gulp js",
    "test": "sass-lint --verbose --no-exit",
    "watch": "gulp"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cca/libraries_wagtail.git"
  },
  "author": "phette23 <phette23@gmail.com> (http://phette.net)",
  "license": "ECL-2.0",
  "bugs": {
    "url": "https://github.com/cca/libraries_wagtail/issues"
  },
  "homepage": "https://github.com/cca/libraries_wagtail#readme",
  "dependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "autoprefixer": "^10.4.20",
    "gulp": "^5.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^10.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-uglify": "^3.0.2",
    "postcss": "^8.4.41",
    "sass": "^1.77.8"
  },
  "devDependencies": {
    "sass-lint": "^1.13.1"
  },
  "engines": {
    "node": "~20"
  },
  "sasslintConfig": ".sass-lint.yml",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "globals": {
        "require": true
      },
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
